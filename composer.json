{
    "name": "lenovo/package-romulus",
    "description": "My first composer package, made to teach me how to build packages.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lenovo\\PackageRomulus\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Lihat Radu",
            "email": "radulihat@gmail.com"
        }
    ],
    "minimum-stability": "alpha",
    "require": {
        "vgrish/core-vendor-autoload-modx2": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.23",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
